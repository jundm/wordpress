# Compose
COMPOSE_PROJECT_NAME=wp-prod

# Domain (for docs/config reference)
DOMAIN=example.com

# Image tags (pin exact patch versions)
WORDPRESS_IMAGE=wordpress:6.7.<patch>-php8.3-fpm
MYSQL_IMAGE=mysql:8.4.<patch>
NGINX_IMAGE=nginx:1.26.<patch>

# WordPress DB
WORDPRESS_DB_HOST=db:3306
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wp_user
WORDPRESS_DB_PASSWORD=change-me
WORDPRESS_TABLE_PREFIX=wp_

# MySQL
MYSQL_ROOT_PASSWORD=change-me

# SSL certs (Cloudflare Full/Strict origin certs)
# Place origin.crt and origin.key under this directory
SSL_CERT_DIR=/path/to/origin-certs
